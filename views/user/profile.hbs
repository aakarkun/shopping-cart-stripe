<div class="uk-grid">
    <div class="uk-width-small-1-1 uk-width-medium-4-5 uk-width-large-3-5 uk-container-center">
        <h1>User Profile</h1>
        <hr>
        <h2>My Orders</h2>
        {{# each orders }}
            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group">
                        {{# each this.items }}
                            <li class="list-group-item">
                                <span class="badge badge-success">$ {{ this.price }}</span>
                                <span class="">{{ this.item.title }}</span> | <span class="uk-text-muted">{{ this.qty }} Units</span>
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="panel-footer">
                    <strong>Total price: $ {{ this.cart.totalPrice }}</strong>
                </div>
            </div>
        {{/each}}
    </div>
</div>